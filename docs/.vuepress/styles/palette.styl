// 浅色模式
.theme-mode-light
  --bodyBg: #F5F5F5
  --mainBg: #F5F5F5
  --sidebarBg: #F5F5F5
  --blurBg: #F5F5F5
  // --textColor: #004050
  --textLightenColor: #FFB6C1
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #282C34
  --codeColor: #fff
  codeThemeDark()

// 深色模式
.theme-mode-dark
  --bodyBg: #000000
  --mainBg: #000000
  --sidebarBg: #000000
  --blurBg: #000000
  --textColor: #FFFF
  --textLightenColor: #FFB6C1
  --borderColor: #2C2C3A
  --codeBg: #282C34
  --codeColor: #fff
  codeThemeDark()

// 阅读模式
.theme-mode-read
  --bodyBg: rgba(245,245,213,1)
  --mainBg: rgba(245,245,213,1)
  --sidebarBg: rgba(245,245,213,.8)
  --blurBg: rgba(245,245,213,.9)
  --textColor: #004050
  --textLightenColor: #FFB6C1
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #282C34
  --codeColor: #fff
  codeThemeDark()
